<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>ibrahim.ragab.net</Authors>
    <RepositoryUrl>https://github.com/IbrahimElshafey/ResumableFunctions</RepositoryUrl>
    <Description>To be used with WEB API projects.</Description>
    <PackageOutputPath>D:\Nuget</PackageOutputPath>
    <!--<Version>1.0.3</Version>-->
    <Version>1.0.5</Version>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ResumableFunctions.Handler\ResumableFunctions.Handler.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Areas\RF\Shared\_RFLayout.cshtml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UiLogic\" />
  </ItemGroup>


	<ItemGroup>
		<PackageReference Include="Fody" Version="6.6.4" />
		<PackageReference Include="MethodBoundaryAspect.Fody" Version="2.0.148" />
	</ItemGroup>
</Project>
