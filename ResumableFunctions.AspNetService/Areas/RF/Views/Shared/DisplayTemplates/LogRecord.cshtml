@using ResumableFunctions.Handler.Helpers;
@using ResumableFunctions.Handler.InOuts.Entities;
@using ResumableFunctions.Handler.InOuts;
@model LogRecord
@{
    var type = Model.TypeClass();
}
<div class="w3-panel @type.Class log-item-@Model.LogType">
    <h5><b>@(StatusCodes.NameOf(Model.StatusCode) ?? type.Title) [@Model.Created.ToLocalTime()]</b></h5>
    <p>
        <pre style="white-space: pre-line">@Model.Message</pre>
        @if (Model.EntityType == EntityType.FunctionInstanceLog)
        {
            <a class="function-instance-label" target="_blank" style="display:block;" href="~/RF/FunctionInstances/FunctionInstance?instanceId=@Model.EntityId">In Function Instance #@Model.EntityId</a>
        }
    </p>
</div>