@using ResumableFunctions.Handler.UiService.InOuts;
@model List<FunctionInfo>
<div class="w3-margin">
    <header class="w3-text-indigo">
        <h2 class="w3-margin-top"><b>Resumable Functions</b></h2>
    </header>
    <div class="w3-container">
        <div class="w3-row-padding w3-margin"
             style="margin-left: -16px !important;margin-right: -16px !important;">
            <div class="w3-col l5">
                <b class="w3-text-indigo">Search</b>
                <input class="w3-input w3-border" type="text" required="" placeholder="Search by Function Name">
            </div>
            <div class="w3-col l3">
                <b class="w3-text-indigo">DLL</b>
                <select class="w3-select" name="option">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">All Services</option>
                    <option value="2">Service 2</option>
                    <option value="3">Service 3</option>
                </select>
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Search" />
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Reset" />
            </div>
        </div>
        <table class="w3-table-all">
            <thead>
                <tr class="w3-indigo">
                    <th>Function URN</th>
                    <th>Function Name</th>
                    <th>First Wait</th>
                    <th>In-progress</th>
                    <th>Failed</th>
                    <th>Completed</th>
                    <th>Created</th>
                    <th>Last Updated</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Count; i++)
            {
                var function = Model[i];

                <tr>
                    <td><a href="~/rf/ResumableFunctionInstances" class="w3-text-blue">@function.URN</a></td>
                    <td>@function.FullName</td>
                    <td>
                        @if (function.IsEntryPoint)
                        {
                            <span>@(function.FirstWait == null ?
                                "<span class='w3-text-red'>No First Wait Exist</span>" :
                                function.FirstWait)</span>
                        }
                        else
                        {
                            <span class="w3-text-blue-gray">Not an entry point</span>
                        }
                    </td>
                    <td>
                        @if (@function.InProgress != 0)
                        {
                            <a href="#completed" class="w3-text-blue">@function.InProgress</a>
                        }
                        else
                        {
                            <span>0</span>
                        }
                    </td>
                    <td>
                        @if (@function.Failed != 0)
                        {
                            <a href="#completed" class="w3-text-blue">@function.Failed</a>
                        }
                        else
                        {
                            <span>0</span>
                        }
                    </td>
                    <td>
                        @if (@function.Completed != 0)
                        {
                            <a href="#completed" class="w3-text-blue">@function.Completed</a>
                        }
                        else
                        {
                            <span>0</span>
                        }
                    </td>
                    <td>@function.Created</td>
                    <td>
                        @if (function.LastUpdated == DateTime.MinValue)
                        {
                            <span>Not Changed</span>
                        }
                        else
                        {
                            <span>@function.LastUpdated</span>
                        }

                    </td>
                </tr>
            }
        </table>
        @*<button class="w3-button w3-indigo w3-margin-top">Show More...</button>*@
    </div>
</div>