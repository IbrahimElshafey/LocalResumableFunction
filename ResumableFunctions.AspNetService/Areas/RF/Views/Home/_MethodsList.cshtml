@using ResumableFunctions.Handler.UiService.InOuts;
@model List<MethodGroupInfo>
<div class="w3-margin">
    <header class="w3-text-indigo">
        <h2 class="w3-margin-top"><b>MethodGroups Groups</b></h2>
    </header>
    <div class="w3-container">
        <div class="w3-row-padding w3-margin"
             style="margin-left: -16px !important;margin-right: -16px !important;">
            <div class="w3-col l5">
                <b class="w3-text-indigo">Search</b>
                <input class="w3-input w3-border" type="text" required="" placeholder="Search by Method URN">
            </div>
            <div class="w3-col l3">
                <b class="w3-text-indigo">Service</b>
                <select class="w3-select" name="option">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">All Services</option>
                    <option value="2">Service 2</option>
                    <option value="3">Service 3</option>
                </select>
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Search" />
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Reset" />
            </div>
        </div>
        <table class="w3-table-all">
            <thead>
            <tr class="w3-indigo">
                <th>Method Group URN</th>
                <th>MethodGroups</th>
                <th>Active Waits</th>
                <th>Completed Waits</th>
                <th>Canceled Waits</th>
                <th>Registration Date</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>@item.URN #@item.Id</span>
                        @if (item.AllWaitsCount > 0)
                        {
                            <span>
                                <a href="~/RF/MethodsGroup/MethodWaits?groupId=@item.Id" target="_blank" class="w3-text-blue">
                                    (@(item.AllWaitsCount) Waits)
                                </a>
                            </span>
                        }
                    </td>
                    <td>
                        @*href="~/RF/MethodsGroup/MethodsInGroup"*@
                        <a onclick="LoadMethods(@item.Id)" target="_blank" class="w3-text-blue">@item.MethodsCount</a>
                    </td>
                    <td>
                        @item.ActiveWaits
                    </td>
                    <td>
                        @item.CompletedWaits
                    </td>
                    <td>
                        @item.CanceledWaits
                    </td>
                    <td>@item.Created</td>
                </tr>
            }
        </table>
    </div>

    <div id="id01" class="w3-modal">
        <div class="w3-modal-content" style="width: 90%;height:auto;">
            <div class="w3-container">
                <span onclick="CloseMethodsModal()" class="w3-button w3-display-topright">&times;</span>
                <div id="methods-in-group">
                    <div class="progress-bar">
                        <div class="progress-bar-value"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
