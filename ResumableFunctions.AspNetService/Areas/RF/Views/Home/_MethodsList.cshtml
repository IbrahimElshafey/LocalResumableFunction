@using ResumableFunctions.Handler.UiService.InOuts;
@model List<MethodGroupInfo>
<div class="w3-margin">
    <header class="w3-text-indigo">
        <h2 class="w3-margin-top"><b>MethodGroups Groups</b></h2>
    </header>
    <div class="w3-container">
        <div class="w3-row-padding w3-margin"
             style="margin-left: -16px !important;margin-right: -16px !important;">
            <div class="w3-col l5">
                <b class="w3-text-indigo">Search</b>
                <input class="w3-input w3-border" type="text" required="" placeholder="Search by Method URN">
            </div>
            <div class="w3-col l3">
                <b class="w3-text-indigo">Service</b>
                <select class="w3-select" name="option">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">All Services</option>
                    <option value="2">Service 2</option>
                    <option value="3">Service 3</option>
                </select>
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Search" />
            </div>
            <div class="w3-col l2">
                <span class="w3-text-light-gray">s</span>
                <input type="button" class="w3-input w3-button w3-indigo" value="Reset" />
            </div>
        </div>
        <table class="w3-table-all">
            <thead>
                <tr class="w3-indigo">
                    <th>Method Group URN</th>
                    <th>MethodGroups</th>
                    <th>Active Waits</th>
                    <th>Completed Waits</th>
                    <th>Canceled Waits</th>
                    <th>Registration Date</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span> @item.URN</span>
                        <span>
                            <a href="~/RF/MethodsGroup/MethodWaits" target="_blank" class="w3-text-blue">
                                (@(item.ActiveWaits + item.CompletedWaits + item.CanceledWaits) Waits)
                            </a>
                        </span>
                    </td>
                    <td>
                        @*href="~/RF/MethodsGroup/MethodsInGroup"*@
                        <a onclick="document.getElementById('id01').style.display='block'" target="_blank" class="w3-text-blue">@item.MethodsCount</a>
                    </td>
                    <td>
                        @item.ActiveWaits
                    </td>
                    <td>
                        @item.CompletedWaits
                    </td>
                    <td>
                        @item.CanceledWaits
                    </td>
                    <td>@item.Created</td>
                </tr>
            }
        </table>
    </div>

    <div id="id01" class="w3-modal">
        <div class="w3-modal-content" style="width: 90%;height:auto;">
            <div class="w3-container">
                <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                <div id="methods-in-group">
                    <header class="w3-text-blue-gray w3-col l10 w3-margin">
                        <h2 class="w3-margin-top">
                            <b>Method in group <span class="w3-text-indigo">`ProjectSubmitted`</span></b>
                        </h2>
                    </header>
                    <div class="w3-container">
                        <table class="w3-table-all">
                            <thead>
                            <tr class="w3-indigo">
                                <th>Service & Assembly Name</th>
                                <th>Class Name</th>
                                <th>Method</th>
                                <th>Can Publish From External</th>
                                <th>Created</th>
                                <th>Modified</th>
                            </tr>
                            </thead>
                            <tr>
                                <td>TestApi1, ReferenceLibrary</td>
                                <td>TestApi1.Examples.ExternalServiceClass</td>
                                <td>int ExternalMethodTest(object input)</td>
                                <td>True</td>
                                <td>12/02/2022</td>
                                <td>12/02/2023</td>
                            </tr>
                        </table>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>