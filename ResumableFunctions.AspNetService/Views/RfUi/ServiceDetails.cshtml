@*Services*@
<div class="w3-margin-buttom">

    <div class="w3-bar-block w3-light-grey w3-cell w3-border-right">
        <button class="w3-bar-item w3-button tablink w3-indigo"
                onclick="openViewPart(event, 'service-details')">
            TestApi1 Service Details
        </button>
        <button class="w3-bar-item w3-button tablink"
                onclick="openViewPart(event, 'scan-logs')">
            Scan Logs
        </button>
        <button class="w3-bar-item w3-button tablink"
                onclick="openViewPart(event, 'resumable-functions')">
            Resumable Functions(10)
        </button>
        <button class="w3-bar-item w3-button tablink"
                onclick="openViewPart(event, 'methods')">
            Methods(34)
        </button>
    </div>

    <div class="w3-cell">

        <div id="service-details" class="ViewPart w3-margin">
            <partial name="./_ServiceInfo" />
        </div>

        <div id="scan-logs" class="w3-margin ViewPart" style="display:none">
            <header class="w3-text-indigo">
                <h2 class="w3-margin-top"><b>Scan Logs</b></h2>
            </header>
            <partial name="./_ScanLogs" />
        </div>

        <div id="resumable-functions" class="w3-margin ViewPart" style="display:none">
            <partial name="./_ResumableFunctionsList" />
        </div>

        <div id="methods" class="w3-margin ViewPart" style="display:none">
            <partial name="./_MethodsList" />
        </div>
    </div>
  
</div>


@section Scripts{
    <script>
        function openViewPart(evt, ViewPartName) {
            var i, x, tablinks;
            x = document.getElementsByClassName("ViewPart");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < x.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" w3-indigo", "");
            }
            document.getElementById(ViewPartName).style.display = "block";
            evt.currentTarget.className += " w3-indigo";
        }
    </script>
}
